<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout tools:context=".NewActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yohoooo">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happy shopping"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />


    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/ic_shrashti"
        android:layout_below="@+id/toolbar"/>



    <TextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topview"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:text="Find ,Shop and "
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Explore new things..!! "
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        />



    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/txt_view1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Please Enter Your Phone Number"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout" android:layout_below="@id/textView" android:padding="15dp" android:orientation="horizontal">

    <Spinner android:layout_height="wrap_content" android:layout_width="120dp" android:id="@+id/spinnerCountries"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent" android:id="@+id/editTextPhone"
        android:maxLength="10"
        android:hint="Enter your number"
        android:digits="0123456789"
        android:layout_weight="2"/>

</LinearLayout>

    <Button android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:background="@drawable/btn_background"
        android:id="@+id/buttonContinue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout"
        android:textColor="#ffffff"
        android:text="Continue"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>


    <View
        android:id="@+id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_yukti"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>