<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yohoooo"
            tools:ignore="MissingConstraints"
           >


        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/imgcart"
            android:layout_width="33dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/nav_cart"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="-9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content"
           app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginLeft="5dp"
            android:text="Explore a Range Of "
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content1"
            app:layout_constraintTop_toBottomOf="@+id/text_content"
            android:layout_marginLeft="3dp"
            android:text=" Attractive "
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:textColor="#69A9A9"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_content2"
            app:layout_constraintTop_toBottomOf="@+id/text_content1"
            android:layout_marginLeft="60dp"
            android:text=" Gifts"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/aclonica"
            android:textColor="#69A9A9"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="MissingConstraints" />







        <ViewFlipper
            android:id="@+id/flio"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_content1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linear"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/flio"
               android:layout_marginTop="8dp"
               tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/circle"
                        android:text="Share"
                        android:textColor="#000000" />


                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle"
                        android:text="Teddy"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle"
                        android:text="Toys"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle"
                        android:text="Cups"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle"
                        android:text="Couple"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle"
                        android:text="Frames"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/circle"
                        android:text="See All"
                        android:textColor="#000000" />


                </LinearLayout>
            </HorizontalScrollView>
           </LinearLayout>

        <ViewFlipper
            android:id="@+id/flier2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/l5"
            tools:ignore="MissingConstraints" />


