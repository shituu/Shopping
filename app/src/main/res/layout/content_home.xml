                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:src="@drawable/molly"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Offer Zone"
                                android:textColor="#980876"
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/aclonica"/>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Grab Now"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#898956"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/aclonica"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Get your order now"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:fontFamily="cursive"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="8dp"
                        android:layout_width="185dp"
                        android:layout_height="190dp"
                        android:elevation="6dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:src="@drawable/molly"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Get"
                                android:textColor="#980876"
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/aclonica"/>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="upto 50-70% off"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#898956"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/aclonica"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="order now!"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:fontFamily="cursive"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_featur"
            android:layout_marginTop="8dp"
            tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/btn_new"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="New Collection"
                        android:background="@drawable/btn_bg_selector"
                        android:layout_marginLeft="5dp"
                        tools:ignore="MissingConstraints"
                        />

                    <Button
                        android:id="@+id/btn_new1"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="Brand new products"
                        android:layout_marginLeft="5dp"
                        tools:ignore="MissingConstraints"
                        />

                    <Button
                        android:id="@+id/btn_new2"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="Offers on Toys"
                        android:layout_marginLeft="5dp"
                        tools:ignore="MissingConstraints"
                        />
                    <Button
                        android:id="@+id/btn_new3"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
